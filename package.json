{
  "name": "ai-code-review-action",
  "version": "1.0.0",
  "description": "AI-powered code review GitHub Action using LangChain and LangGraph",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package": "bun run build",
    "dev": "ncc build src/index.ts -w -o dist",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write .",
    "release": "npm run package && git add dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/ai-code-review-action.git"
  },
  "keywords": [
    "github-action",
    "code-review",
    "ai",
    "langchain",
    "nextjs",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@langchain/langgraph": "^0.0.19",
    "@langchain/openai": "^0.0.28",
    "@langchain/core": "^0.1.52",
    "@octokit/rest": "^20.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}